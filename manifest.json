{
  "manifest_version": 2,
  "name": "PassePasPartout",
  "version": "1.0",
  "description": "Gestionnaire de mots de passe simple",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "./view/popup.html",
    "default_icon": {
      "16": "/assets/img/icon16.png",
      "48": "/assets/img/icon48.png",
      "128": "/assets/img/icon128.png"
    }
  },
  "icons": {
    "16": "/assets/img/icon16.png",
      "48": "/assets/img/icon48.png",
      "128": "/assets/img/icon128.png"
  }
}
