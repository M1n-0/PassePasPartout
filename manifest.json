{
  "manifest_version": 3,
  "name": "PassePasPartout",
  "version": "1.0",
  "description": "Une extension simple pour g√©rer vos mots de passe",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "./view/popup.html",
    "default_icon": {
      "16": "assets/img/icon16.png",
      "48": "assets/img/icon48.png",
      "128": "assets/img/icon128.png"
    }
  },
  "background": {
    "service_worker": "./js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/content.js"]
    }
  ],
  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  }
}
